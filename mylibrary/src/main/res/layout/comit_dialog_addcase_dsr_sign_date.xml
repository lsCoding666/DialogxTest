<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/dialog_header_rl"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="签名和日期" />

        <ImageView
            android:id="@+id/dialog_close_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:padding="16dp"
            android:src="@mipmap/comit_icon_close" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sign_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:id="@+id/personal_sign_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <View
                android:layout_width="2dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/comit_shape_left_decoration" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="当事人签名"
                android:theme="@style/commonTitleText" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlPersonalSign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="150dp"
            android:background="#FFF3F6F8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="点击签名"
                android:theme="@style/commonText" />

            <ImageView
                android:background="#FFF3F6F8"
                android:id="@+id/ivPersonSign"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:visibility="invisible" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <View
                android:layout_width="2dp"
                android:layout_height="14dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/comit_shape_left_decoration" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="当事人签署日期"
                android:theme="@style/commonTitleText" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlSignDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="150dp"
            android:background="#FFF3F6F8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="点击签署日期"
                android:theme="@style/commonText" />

            <ImageView
                android:background="#FFF3F6F8"
                android:id="@+id/ivPersonalSignDate"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:visibility="invisible" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        android:minWidth="290dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingTop="26dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="7dp"
            android:layout_weight="1"
            android:background="@drawable/comit_shape_common_normal_btn"
            android:text="取消"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/btnCommit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:background="@drawable/comit_shape_bg_blue_btn"
            android:text="提交"
            android:textColor="@color/white" />


    </LinearLayout>

</LinearLayout>